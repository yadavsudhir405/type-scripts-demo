{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "dist"
  ]
}
